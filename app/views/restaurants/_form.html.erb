
<div class="text-center">

  <%= form_for(restaurant) do |t| %>
    <% if restaurant.errors.any? %>
      <div id="error_explanation">
        <ul class="list-unstyled">
        <% restaurant.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= t.label :name %>
    <%= t.text_field :name %>
    <br>
    <%= t.label :address %>
    <%= t.text_field  :address %>
    <br>
    <%= t.label :phone_number %>
    <%= t.text_field :phone_number %>
    <br>
    <%= t.label :category %>
    <%= t.select :category, ["chinese", "italian", "japanese", "french", "belgian"] %>
    <br>
    <%= t.submit %>
  <% end %>
</div>